<resources>

    <!-- inherit from the material theme -->
    <style name="AppTheme" parent="android:Theme.Material">
        <!-- Main theme colors --><!--   your app branding color for the app bar -->
        <item name="android:colorPrimary">@color/primary_500</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@color/primary_700</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/secondary_200</item>
    </style>

    <style name="PrimaryButtonAppTheme" parent="android:Widget.Material.Button">
        <item name="android:background">@color/secondary_200</item>
        <item name="android:textColor">@color/white_100</item>
    </style>

    <style name="SecondaryButtonAppTheme" parent="android:Widget.Material.Button">
        <item name="android:background">@color/primary_100</item>
        <item name="android:textColor">@color/black_87</item>
    </style>

</resources>
